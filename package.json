{
  "name": "crucible",
  "version": "0.0.1",
  "description": "cms thing",
  "main": "index.js",
  "scripts": {
    "build": "browserify ./index.js -o ./gen/client.js -p [ modular-css --css \"./gen/client.css\" ]",
    "watch": "watchify ./index.js -o ./gen/client.js -p [ modular-css --css \"./gen/client.css\" ]",
    "start": "beefy index.js 9966 --live --index=./index.html -- -p [ modular-css --css \"./gen/client.css\" ]"
  },
  "keywords": [
    "cms",
    "mithril",
    "firebase"
  ],
  "author": "Pat Cavit <npm@patcavit.com>",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^12.0.1",
    "modular-css": "^0.5.1",
    "watchify": "^3.6.1",
    "beefy": "^2.1.5"
  },
  "dependencies": {
    "firebase": "^2.3.2",
    "lodash.assign": "^3.2.0",
    "lodash.get": "^3.7.0",
    "lodash.set": "^3.7.4",
    "mithril": "^0.2.0",
    "purecss": "^0.6.0",
    "sluggo": "^0.2.0"
  }
}
